<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Student Dashboard</title>
    <%-include('../partials/header') %>
</head>

<body>
    <section class="vh-2000" style="background-image: url('../img/1.jpg'); background-color: #20315e; margin-top: -50px; background-size: cover; background-position: center;">

        <%-include('../partials/navstudent') %>
        
        <form action="/student/submitdateandpriority" method="post" style="padding-top: 100px;">
            <% for (const linkWithCourses of linkWithcourses) { %>
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-md-6 mb-4"> 

                            <div class="mt-5 card">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <div class="card-body">
                                            <h5 class="card-title">Link Name: <%= linkWithCourses.linkName %></h5>
                                            <input type="hidden" id="linkname" name="linkname" value="<%= linkWithCourses.linkName %>">
                                            <% for (const course of linkWithCourses.courses) { %>
                                                <h6 class="card-subtitle mb-2 text-muted">Course Name: <%= course %></h6>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card-body">
                                            
                                            <% for(let i=0; i<3; i++) { %>
                                                <label for="dateInput<%= i %>">Date:</label>
                                                <select class="form-control" id="dateInput<%= i %>" name="dateInput" required>
                                                    <option value="" selected disabled>Select...</option>
                                                    <% for (const date of availableDates) { %>
                                                        <option value="<%= date %>"><%= date %></option>
                                                    <% } %>
                                                </select>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card-body">
                                            <% for(let i=0; i<3; i++) { %>
                                                <label for="priorityInput<%= i %>">Priority:</label>
                                                <input type="text" class="form-control" id="priorityInput<%= i %>" name="priorityInput" required>
                                            <% } %>    
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
            <div class="d-flex justify-content-center mt-3" >
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <br><br>
        </form>

    </section>

    <%-include('../partials/footer') %>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin=""></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jpQ"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1p9sOMHSZGdGQQ6D2fwELbT8K"
        crossorigin="anonymous"></script>
</body>

</html>
